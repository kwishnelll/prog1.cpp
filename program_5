#include <iostream>
using namespace std;
int main() {
    int exitTime, entryTime, period;
    float charge;
    cout <<"Please enter your exit time: ";
    cin >>entryTime;
    cout <<" please enter your exit time: ";
    cin >>exitTime;
    period = exitTime - entryTime;
    if(period > 1) 
       charge = (period) + 1;
    else
        charge = 2;
    cout <<"The charger for your parking is "<<charge; 
}
